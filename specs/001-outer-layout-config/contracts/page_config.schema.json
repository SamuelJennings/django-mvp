{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://django-cotton-layouts/specs/001-outer-layout-config/page_config.schema.json",
  "title": "PAGE_CONFIG",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "brand": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "text": {
          "type": "string"
        },
        "image_light": {
          "type": [
            "string",
            "null"
          ]
        },
        "image_dark": {
          "type": [
            "string",
            "null"
          ]
        },
        "icon_light": {
          "type": [
            "string",
            "null"
          ]
        },
        "icon_dark": {
          "type": [
            "string",
            "null"
          ]
        }
      },
      "required": [
        "text"
      ]
    },
    "sidebar": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "show_at": {
          "enum": [
            false,
            null,
            "sm",
            "md",
            "lg",
            "xl",
            "xxl"
          ]
        },
        "collapsible": {
          "type": "boolean"
        },
        "width": {
          "type": "string"
        }
      },
      "required": [
        "show_at"
      ]
    },
    "navbar": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "fixed": {
          "type": "boolean"
        },
        "border": {
          "type": "boolean"
        },
        "menu_visible_at": {
          "enum": [
            false,
            null,
            "sm",
            "md",
            "lg",
            "xl",
            "xxl"
          ]
        }
      }
    },
    "actions": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true,
        "properties": {
          "icon": {
            "type": "string"
          },
          "text": {
            "type": "string"
          },
          "href": {
            "type": "string"
          },
          "target": {
            "type": [
              "string",
              "null"
            ]
          },
          "id": {
            "type": [
              "string",
              "null"
            ]
          }
        },
        "required": [
          "icon",
          "text",
          "href"
        ]
      }
    }
  },
  "required": [
    "brand",
    "sidebar",
    "navbar",
    "actions"
  ]
}